
#!/usr/bin/env bash
rofi \
	-show drun \
	-modi run,drun,ssh \
	-scroll-method 0 \
    -cycle false \
	-drun-match-fields name \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal foot \
    -disable-history \
    -sorting-method levenshtein \
    -matching fuzzy \
    -hover-select \
    -click-to-exit \
    -show-icons \
	-kb-cancel Escape \
	-theme "$HOME"/.config/rofi/config/launchpad.rasi
